<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_patient_line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true">
    <LinearLayout
        android:id="@+id/idnum_line_view"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idnum_avatar_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_view"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/patientlist_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tmp" />
            <TextView
                android:id="@+id/text_surgery_time"
                android:textSize="@dimen/patientlist_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tmp" />
            <TextView
                android:id="@+id/text_surgery_position"
                android:textSize="@dimen/patientlist_text_size"
                android:textAlignment="viewEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tmp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>






