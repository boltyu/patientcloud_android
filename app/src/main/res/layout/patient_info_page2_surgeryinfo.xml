            android:text="1"
            android:id="@+id/edit_patient_surgery_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/patientinfo_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
